<%= form_for(@writer, url: '/signin') do |f| %>
    <%= f.label :handle %>
    <%= f.text_field :handle %><br>
    <%= f.label :password %>
    <%= f.password_field :password %><br> 
    <%= f.submit "Log In" %>  
<% end %>

alternatively, <%= link_to "sign in with G-mail", "/auth/developer" %>